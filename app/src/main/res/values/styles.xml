<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokemonTracker.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryVariant">@color/neutral_1</item>
        <item name="colorSecondary">@color/neutral_2</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:textViewStyle">@font/roboto</item>
    </style>

    <style name="Theme.PokemonTracker.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorSecondary">@color/dark </item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:textViewStyle">@font/roboto</item>
    </style>

    <style name="pokemon_detail_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="pokemon_type_bubble">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>